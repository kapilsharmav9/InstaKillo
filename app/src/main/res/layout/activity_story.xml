<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/placeholder"
        android:id="@+id/Story_images"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/skip_view"
            android:layout_weight="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/reverse_view"
            android:layout_weight="1"/>

    </LinearLayout>
<jp.shts.android.storiesprogressview.StoriesProgressView
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:id="@+id/stories_progress"
    android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stories_progress"
        android:layout_margin="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:id="@+id/stroryphoto"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/stroryphoto"
            android:textStyle="bold"
            android:id="@+id/story_user"/>
    </RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:id="@+id/r_seen"
    android:padding="3dp"
    android:background="@android:color/white">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_see"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/holo_red_light"
        android:id="@+id/seen_number"/>
</LinearLayout>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_delete"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:padding="3dp"
    android:id="@+id/story_delete"
    android:layout_alignParentRight="true" />
</RelativeLayout>